    <Style TargetType="{x:Type Border}" x:Key="CustomItemNews">
        <Style.Setters>
            <Setter Property="Background" Value="#992F2F2F"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#66808080"/>
            <Setter Property="CornerRadius" Value="15"/>
        </Style.Setters>
    </Style>

    <Style TargetType="{x:Type RadioButton}" x:Key="CustomRadioButton">
        <Style.Setters>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RadioButton}">
                        <StackPanel Orientation="Horizontal" Opacity="80" Name="RadionButtonStackPanel">
                            <Image Name="RadioBoxImage" Height="15" VerticalAlignment="Center">
                                <Image.Source>
                                    <DrawingImage>
                                        <DrawingImage.Drawing>
                                            <DrawingGroup ClipGeometry="M0,0 V26 H26 V0 H0 Z">
                                                <DrawingGroup Opacity="1">
                                                    <GeometryDrawing>
                                                        <GeometryDrawing.Brush>
                                                            <SolidColorBrush Color="#FFACACAC" Opacity="0.5" />
                                                        </GeometryDrawing.Brush>
                                                        <GeometryDrawing.Geometry>
                                                            <EllipseGeometry RadiusX="12" RadiusY="12" Center="13,13" />
                                                        </GeometryDrawing.Geometry>
                                                    </GeometryDrawing>
                                                    <GeometryDrawing>
                                                        <GeometryDrawing.Pen>
                                                            <Pen Thickness="1" StartLineCap="Flat" EndLineCap="Flat" LineJoin="Miter">
                                                                <Pen.Brush>
                                                                    <SolidColorBrush Color="#FFFFFFFF" Opacity="0.72" />
                                                                </Pen.Brush>
                                                            </Pen>
                                                        </GeometryDrawing.Pen>
                                                        <GeometryDrawing.Geometry>
                                                            <EllipseGeometry RadiusX="12.5" RadiusY="12.5" Center="13,13" />
                                                        </GeometryDrawing.Geometry>
                                                    </GeometryDrawing>
                                                </DrawingGroup>
                                            </DrawingGroup>
                                        </DrawingImage.Drawing>
                                    </DrawingImage>
                                </Image.Source>
                            </Image>
                            <Label Content="{TemplateBinding Content}" FontSize="{TemplateBinding FontSize}"
                                   Foreground="{TemplateBinding Foreground}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="RadionButtonStackPanel" Property="Opacity" Value="100"/>
                                <Setter TargetName="RadioBoxImage" Property="Source">
                                    <Setter.Value>
                                        <DrawingImage>
                                            <DrawingImage.Drawing>
                                                <DrawingGroup ClipGeometry="M0,0 V26 H26 V0 H0 Z">
                                                    <DrawingGroup Opacity="1">
                                                        <GeometryDrawing>
                                                            <GeometryDrawing.Brush>
                                                                <SolidColorBrush Color="#FFACACAC" Opacity="0.5" />
                                                            </GeometryDrawing.Brush>
                                                            <GeometryDrawing.Geometry>
                                                                <EllipseGeometry RadiusX="12" RadiusY="12" Center="13,13" />
                                                            </GeometryDrawing.Geometry>
                                                        </GeometryDrawing>
                                                        <GeometryDrawing>
                                                            <GeometryDrawing.Pen>
                                                                <Pen Thickness="1" StartLineCap="Flat" EndLineCap="Flat" LineJoin="Miter">
                                                                    <Pen.Brush>
                                                                        <SolidColorBrush Color="#FFFFFFFF" Opacity="0.72" />
                                                                    </Pen.Brush>
                                                                </Pen>
                                                            </GeometryDrawing.Pen>
                                                            <GeometryDrawing.Geometry>
                                                                <EllipseGeometry RadiusX="12.5" RadiusY="12.5" Center="13,13" />
                                                            </GeometryDrawing.Geometry>
                                                        </GeometryDrawing>
                                                    </DrawingGroup>
                                                    <GeometryDrawing Brush="#FF1D1D1D">
                                                        <GeometryDrawing.Geometry>
                                                            <EllipseGeometry RadiusX="10" RadiusY="10" Center="13,13" />
                                                        </GeometryDrawing.Geometry>
                                                    </GeometryDrawing>
                                                    <GeometryDrawing>
                                                        <GeometryDrawing.Pen>
                                                            <Pen Thickness="1" StartLineCap="Flat" EndLineCap="Flat" LineJoin="Miter">
                                                                <Pen.Brush>
                                                                    <SolidColorBrush Color="#FFBFBFBF" Opacity="0.79" />
                                                                </Pen.Brush>
                                                            </Pen>
                                                        </GeometryDrawing.Pen>
                                                        <GeometryDrawing.Geometry>
                                                            <EllipseGeometry RadiusX="9.5" RadiusY="9.5" Center="13,13" />
                                                        </GeometryDrawing.Geometry>
                                                    </GeometryDrawing>
                                                </DrawingGroup>
                                            </DrawingImage.Drawing>
                                        </DrawingImage>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
