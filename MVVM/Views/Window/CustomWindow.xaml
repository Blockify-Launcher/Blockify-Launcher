<Window x:Class="BlockifyLauncher.CustomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlockifyLauncher"
        mc:Ignorable="d"
        Title="CustomWindow" Height="450" Width="400" AllowsTransparency="True" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Style="{StaticResource WindowBorderHeaderStyle}" MouseDown="HeaderMouse">
            <Grid>

                <Label x:Name="TitleCustomForm" Foreground="#5A5A5A" FontSize="12" Margin="0,-5"
               VerticalAlignment="Center" FontWeight="Regular"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Height="Auto" Width="40" Style="{StaticResource HeaderButton}" Content="⨉" FontSize="16" Name="Exit"
                    Click="MainWindowsClose"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            
        </Grid>
    </Grid>
</Window>
